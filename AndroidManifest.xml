<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
   package="net.cbsb.android.easytimer" 
   android:versionCode="4" android:versionName="1.4">
   <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true" android:theme="@android:style/Theme.Light">

      <activity android:name="net.johnpwood.android.standuptimer.ConfigureStandupTimer" android:label="@string/app_name">
         <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
         </intent-filter>
      </activity>

      <activity android:name="net.johnpwood.android.standuptimer.About" android:label="@string/about_title"
         android:theme="@android:style/Theme.Dialog" />

      <activity android:name="net.johnpwood.android.standuptimer.Help" android:label="@string/help_title"
         android:theme="@android:style/Theme.Dialog" />

      <activity android:name="net.johnpwood.android.standuptimer.StandupTimer" android:label="@string/app_name" />
      <activity android:name="net.johnpwood.android.standuptimer.TeamDetails" android:theme="@android:style/Theme.NoTitleBar" />
      <activity android:name="net.johnpwood.android.standuptimer.MeetingDetails" android:label="@string/meeting_details" />
      <activity android:name="net.johnpwood.android.standuptimer.Prefs" android:label="@string/settings_title" />
      <activity android:name="net.johnpwood.android.standuptimer.TeamList" android:label="@string/team_label" />
  <activity            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout"
            android:name="com.google.ads.AdActivity" />
   </application>
   <uses-permission android:name="android.permission.WAKE_LOCK" />
   <uses-sdk android:minSdkVersion="2" android:targetSdkVersion="13" />
   <supports-screens android:smallScreens="false" />
   	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.INTERNET" />
</manifest> 
